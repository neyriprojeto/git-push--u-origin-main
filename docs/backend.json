
{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user in the system.",
      "type": "object",
      "properties": {
        "nome": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "cargo": {
          "type": "string",
          "description": "The user's role in the church (e.g., 'diacono', 'membro')."
        },
        "tipo": {
          "type": "string",
          "enum": [
            "obreiro",
            "membro"
          ],
          "description": "The type of member."
        },
        "fotoUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture from Cloudinary."
        },
        "igrejaId": {
          "type": "string",
          "description": "The ID of the church the user belongs to."
        },
        "congregacao": {
          "type": "string",
          "description": "The congregation the user belongs to."
        },
        "ativo": {
          "type": "boolean",
          "description": "Whether the user account is active."
        },
        "status": {
            "type": "string",
            "enum": ["Ativo", "Inativo", "Pendente"],
            "description": "The current status of the member's registration."
        },
        "criadoEm": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user was created."
        },
        "dataNascimento": {
            "type": "string",
            "format": "date-time",
            "description": "The user's birth date."
        },
        "dataBatismo": {
            "type": "string",
            "format": "date-time",
            "description": "The user's baptism date."
        },
        "recordNumber": {
            "type": "string",
            "description": "The user's registration number."
        },
        "rg": {
            "type": "string",
            "description": "The user's RG."
        },
        "cpf": {
            "type": "string",
            "description": "The user's CPF."
        },
        "cep": {
            "type": "string",
            "description": "The user's postal code."
        },
        "logradouro": {
            "type": "string",
            "description": "The user's street."
        },
        "numero": {
            "type": "string",
            "description": "The user's house number."
        },
        "bairro": {
            "type": "string",
            "description": "The user's neighborhood."
        },
        "cidade": {
            "type": "string",
            "description": "The user's city."
        },
        "estado": {
            "type": "string",
            "description": "The user's state."
        }
      },
      "required": [
        "nome",
        "email",
        "igrejaId",
        "congregacao",
        "ativo",
        "criadoEm",
        "tipo",
        "rg",
        "cpf",
        "cargo",
        "status"
      ]
    },
    "igreja": {
      "title": "Igreja",
      "description": "Represents a church.",
      "type": "object",
      "properties": {
        "nome": {
          "type": "string",
          "description": "The name of the church."
        },
        "logoUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the church's logo from Cloudinary."
        },
        "criadaEm": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the church was created."
        }
      },
      "required": [
        "nome",
        "criadaEm"
      ]
    },
    "cardTemplate": {
      "title": "Card Template",
      "description": "Stores the customization settings for the member ID card.",
      "type": "object",
      "properties": {
        "elements": {
          "type": "object",
          "description": "Position, size, and content of each element on the card."
        },
        "cardStyles": {
          "type": "object",
          "description": "Background colors and images for the card."
        },
        "textColors": {
          "type": "object",
          "description": "Colors for different text groups on the card."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last update."
        }
      }
    },
    "congregacao": {
      "title": "Congregação",
      "description": "Represents a church congregation.",
      "type": "object",
      "properties": {
        "nome": {
          "type": "string",
          "description": "The name of the congregation."
        },
        "criadaEm": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the congregation was created."
        }
      },
      "required": [
        "nome",
        "criadaEm"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores individual user profiles."
    },
    "/igrejas/{igrejaId}": {
      "schema": {
        "$ref": "#/entities/igreja"
      },
      "description": "Stores information about different churches."
    },
    "/cardTemplates/{templateId}": {
      "schema": {
        "$ref": "#/entities/cardTemplate"
      },
      "description": "Stores the member ID card design template."
    },
    "/congregacoes/{congregacaoId}": {
      "schema": {
        "$ref": "#/entities/congregacao"
      },
      "description": "Stores the list of congregations."
    }
  }
}
