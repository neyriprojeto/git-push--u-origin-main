
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user account and their member profile.",
      "properties": {
        "id": { "type": "string", "description": "The user's unique ID (matches Auth UID)." },
        "nome": { "type": "string", "description": "Full name of the user." },
        "email": { "type": "string", "format": "email", "description": "User's email address." },
        "avatar": { "type": "string", "format": "uri", "description": "URL for the user's profile picture." },
        "recordNumber": { "type": "string", "description": "Member record number." },
        "status": { "type": "string", "enum": ["Ativo", "Inativo", "Pendente"], "description": "Membership status." },
        "gender": { "type": "string", "enum": ["Masculino", "Feminino"], "description": "User's gender." },
        "dataNascimento": { "type": "string", "format": "date-time", "description": "Date of birth." },
        "dataBatismo": { "type": "string", "format": "date-time", "description": "Date of baptism." },
        "dataMembro": { "type": "string", "format": "date-time", "description": "Date they became a member." },
        "maritalStatus": { "type": "string", "enum": ["Solteiro(a)", "Casado(a)", "Divorciado(a)", "Viúvo(a)"], "description": "Marital status." },
        "cpf": { "type": "string", "description": "User's CPF document number." },
        "rg": { "type": "string", "description": "User's RG document number." },
        "naturalness": { "type": "string", "description": "City/State of birth." },
        "nationality": { "type": "string", "description": "User's nationality." },
        "phone": { "type": "string", "description": "Primary phone number." },
        "whatsapp": { "type": "string", "description": "WhatsApp number." },
        "cargo": { "type": "string", "description": "Role within the church (e.g., Membro, Pastor)." },
        "cep": { "type": "string", "description": "Postal code." },
        "logradouro": { "type": "string", "description": "Street name." },
        "numero": { "type": "string", "description": "Address number." },
        "bairro": { "type": "string", "description": "Neighborhood." },
        "cidade": { "type": "string", "description": "City." },
        "estado": { "type": "string", "description": "State." },
        "complemento": { "type": "string", "description": "Address complement." },
        "congregacao": { "type": "string", "description": "Congregation the user belongs to." },
        "responsiblePastor": { "type": "string", "description": "Name of the responsible pastor/leader." },
        "messageIds": {
          "type": "array",
          "description": "An array of message IDs sent by the user.",
          "items": { "type": "string" }
        }
      },
      "required": ["nome", "email", "cargo", "status"]
    },
    "Group": {
      "title": "Group",
      "type": "object",
      "description": "Represents a group within the church (e.g., youth group, choir).",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Group entity." },
        "name": { "type": "string", "description": "The name of the group." },
        "description": { "type": "string", "description": "A description of the group." }
      },
      "required": ["id", "name"]
    },
    "ChurchInfo": {
      "title": "ChurchInfo",
      "type": "object",
      "description": "Singleton document for general church information.",
      "properties": {
        "bannerImageUrl": { "type": "string", "format": "uri" },
        "pastorImageUrl": { "type": "string", "format": "uri" },
        "pastorDisplayName": { "type": "string", "description": "The name to display on the home page (e.g., 'Pr. Carlos e Pra. Suelen')." },
        "pastorDisplayRole": { "type": "string", "description": "The role to display on the home page (e.g., 'Pastores Presidentes')." },
        "pastorSignatureName": { "type": "string", "description": "The official name of the lead pastor for document signatures." },
        "pastoralMessage": { "type": "string" },
        "aboutUs": { "type": "string" },
        "instagramUrl": { "type": "string", "format": "uri" },
        "youtubeUrl": { "type": "string", "format": "uri" },
        "websiteUrl": { "type": "string", "format": "uri" },
        "radioUrl": { "type": "string", "format": "uri" },
        "radioPageUrl": { "type": "string", "format": "uri" },
        "pastorSignatureUrl": { "type": "string", "format": "uri" },
        "conventionLogo1Url": { "type": "string", "format": "uri" },
        "conventionLogo2Url": { "type": "string", "format": "uri" },
        "fichaLogoUrl": { "type": "string", "format": "uri" },
        "baptismCertBgUrl": { "type": "string", "format": "uri", "description": "URL for the baptism certificate background image." },
        "baptismCertLogoUrl": { "type": "string", "format": "uri", "description": "URL for the baptism certificate logo." },
        "baptismCertElements": { "type": "object", "description": "Stores position and style for baptism certificate elements." },
        "presentationCertBgUrl": { "type": "string", "format": "uri", "description": "URL for the presentation certificate background image." },
        "presentationCertElements": { "type": "object", "description": "Stores position and style for presentation certificate elements." },
        "presentationCertLogoUrl": { "type": "string", "format": "uri", "description": "URL for the presentation certificate logo." },
        "statuteUrl": { "type": "string", "format": "uri", "description": "URL for the church statute PDF document." },
        "bankName": { "type": "string", "description": "Bank name for donations." },
        "bankAgency": { "type": "string", "description": "Bank agency number." },
        "bankAccount": { "type": "string", "description": "Bank account number." },
        "bankPixKey": { "type": "string", "description": "PIX key for donations." },
        "contactPhone": { "type": "string", "description": "General contact phone number." },
        "contactEmail": { "type": "string", "format": "email", "description": "General contact email address." },
        "churchAddress": { "type": "string", "description": "Main church address for display." }
      }
    },
    "Leader": {
      "title": "Leader",
      "type": "object",
      "description": "Represents a member of the executive committee for the homepage.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "email": { "type": "string", "format": "email" },
        "order": { "type": "number" }
      },
      "required": ["name", "role"]
    },
    "DocumentTemplate": {
      "title": "DocumentTemplate",
      "type": "object",
      "description": "Represents a template for generating documents.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Congregacao": {
        "title": "Congregacao",
        "type": "object",
        "description": "Represents a single church congregation.",
        "properties": {
            "id": { "type": "string" },
            "nome": { "type": "string" },
            "endereco": { "type": "string" },
            "pastorId": { "type": "string", "description": "The UID of the pastor leading this congregation." },
            "pastorName": { "type": "string", "description": "The name of the pastor leading this congregation." }
        },
        "required": ["nome"]
    },
    "CardTemplate": {
        "title": "CardTemplate",
        "type": "object",
        "description": "Stores the template for member ID cards.",
        "properties": {
            "id": { "type": "string" },
            "elements": { "type": "object" },
            "cardStyles": { "type": "object" },
            "textColors": { "type": "object" }
        }
    },
    "ChurchLogo": {
        "title": "ChurchLogo",
        "type": "object",
        "description": "Represents a church logo asset available for download.",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string", "description": "Name or description of the logo." },
            "imageUrl": { "type": "string", "format": "uri", "description": "URL of the logo image (PNG)." }
        },
        "required": ["name", "imageUrl"]
    },
    "Post": {
      "title": "Post",
      "type": "object",
      "description": "Represents an announcement on the mural.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatar": { "type": "string", "format": "uri" },
        "imageUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "content", "authorId", "authorName", "createdAt"]
    },
    "Message": {
      "title": "Message",
      "type": "object",
      "description": "Represents a message sent to the administration or a congregation.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string", "description": "The UID of the user who sent the message." },
        "senderName": { "type": "string" },
        "recipientId": { "type": "string", "description": "UID of the recipient pastor, or a group ID like 'ADMIN_GROUP'." },
        "recipientName": { "type": "string", "description": "Display name of the recipient (e.g., 'Pr. João' or 'Administração Geral')." },
        "subject": { "type": "string" },
        "body": { "type": "string" },
        "attachmentUrl": { "type": "string", "format": "uri", "description": "URL for an optional attachment file." },
        "createdAt": { "type": "string", "format": "date-time" },
        "replies": {
          "type": "array",
          "description": "A thread of replies to the message.",
          "items": {
            "type": "object",
            "properties": {
              "authorId": { "type": "string" },
              "authorName": { "type": "string" },
              "body": { "type": "string" },
              "attachmentUrl": { "type": "string", "format": "uri", "description": "URL for an optional attachment file in a reply." },
              "createdAt": { "type": "string", "format": "date-time" }
            },
            "required": ["authorId", "authorName", "body", "createdAt"]
          }
        }
      },
      "required": ["userId", "senderName", "recipientId", "recipientName", "subject", "body", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
        "schema": { "$ref": "#/entities/User" },
        "description": "Stores all user and member data. The document ID is the Firebase Auth UID."
    },
    "/groups/{groupId}": {
        "schema": { "$ref": "#/entities/Group" },
        "description": "Stores group information. This collection is currently locked down in security rules."
    },
    "/churchInfo/{churchInfoId}": {
        "schema": { "$ref": "#/entities/ChurchInfo" },
        "description": "Stores general, public-facing church information. Should only contain one document (e.g., with ID 'main')."
    },
    "/leaders/{leaderId}": {
        "schema": { "$ref": "#/entities/Leader" },
        "description": "Stores executive committee leaders for public display."
    },
    "/documentTemplates/{templateId}": {
        "schema": { "$ref": "#/entities/DocumentTemplate" },
        "description": "Stores templates for documents."
    },
    "/congregacoes/{congregacaoId}": {
        "schema": { "$ref": "#/entities/Congregacao" },
        "description": "Stores the list of congregations."
    },
    "/cardTemplates/{templateId}": {
        "schema": { "$ref": "#/entities/CardTemplate" },
        "description": "Stores the template for member ID cards. Should only contain one document (e.g., with ID 'default')."
    },
    "/logos/{logoId}": {
        "schema": { "$ref": "#/entities/ChurchLogo" },
        "description": "Stores church logos for download."
    },
    "/posts/{postId}": {
        "schema": { "$ref": "#/entities/Post" },
        "description": "Stores announcements for the mural."
    },
    "/messages/{messageId}": {
        "schema": { "$ref": "#/entities/Message" },
        "description": "Stores messages sent via the contact form."
    }
  }
}

    