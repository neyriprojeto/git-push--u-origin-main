
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    match /igrejas/{igrejaId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin-only writes, handled via console or a trusted backend
    }

    match /cardTemplates/{templateId} {
      // Allow authenticated users to read templates (e.g., for rendering cards)
      allow read: if request.auth != null;
      // Allow any authenticated user to write/update templates for now.
      // In a real app, this should be restricted to admins.
      allow write: if request.auth != null;
    }
     match /congregacoes/{congregacaoId} {
      // Allow public read for congregations list on registration page
      allow read: if true; 
      // Only admins can create or delete
      allow create, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

    